<div class="container">
    <h1 class="text-center pb-3 pt-3">Listado de Pacientes Inscritos</h1>
    <a href="/crear" class="btn btn-success text-center"><i class="fa-solid fa-plus"></i> Nuevo Paciente</a>
    <div class="row">
        <div class="col">
            <table class="table">
                <thead>
                    <tr>
                        <th scope="col">id</th>
                        <th scope="col">Nombre</th>
                        <th scope="col">Apellido</th>
                        <th scope="col">Sexo</th>
                        <th scope="col">Fecha</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each arrPacientes}}
                    <tr>
                        <td>{{this.id}}</td>
                        <td>{{this.nombre}}</td>
                        <td>{{this.apellido}}</td>
                        <td>{{this.sexo}}</td>
                        <td>{{this.fecha_registro}}</td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
</div>

